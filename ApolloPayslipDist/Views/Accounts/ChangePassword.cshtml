@model ApolloPayslipDist.Models.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Change Password</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword" id="ChangePasswordViewModelForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountId" />
            <div class="form-group">
                <label asp-for="CurrentPassword">Current Password</label>
                <input asp-for="CurrentPassword" class="k-textbox" />
                <span asp-validation-for="CurrentPassword" class="text-danger k-invalid-msg" data-for="CurrentPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword">New Password</label>
                <input asp-for="NewPassword" class="k-textbox" />
                <span asp-validation-for="NewPassword" class="text-danger k-invalid-msg" data-for="NewPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="k-textbox" />
                <span asp-validation-for="ConfirmPassword" class="text-danger k-invalid-msg" data-for="ConfirmPassword"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="k-button k-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Booking" class="k-button">Back to Scheduler</a>
</div>

<script>
    $('#ChangePasswordViewModelForm').on('submit', function () {
        // alert('SUBMIT'); return false;
        var curPwd = $('#CurrentPassword').val();
        var newPwd = $('#NewPassword').val();
        var confPwd = $('#ConfirmPassword').val();

        if (curPwd == null || curPwd == '') {
            alert("Current password field required!");
            return false;
        }

        if (newPwd != confPwd) {
            alert("New password and confirm password ain't match.");
            return false;
        }
    });
</script>

